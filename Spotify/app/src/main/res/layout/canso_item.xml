<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="1dp"
        android:layout_marginBottom="6dp"
        android:background="#d9d9d9" />



    <TextView
        android:id="@+id/idSong"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent
"
        app:layout_constraintTop_toTopOf="parent"></TextView>


    <ImageButton
        android:layout_marginStart="15dp"
        android:id="@+id/imfav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_transparent"
        android:src="@drawable/song_nonfavourite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idSong"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txvNameSong"
        android:layout_marginStart="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="New Song"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imfav"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txvTimeSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0:00"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="12dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>