<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:backgroundTint="@color/lavender"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ArtistImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/musician"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/ArtistName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Adele"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/ArtistImage"
                app:layout_constraintStart_toStartOf="@+id/ArtistImage"
                app:layout_constraintTop_toBottomOf="@+id/ArtistImage" />


            <ImageView
                android:id="@+id/ImgListener"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/listener"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="@+id/ArtistName"
                app:layout_constraintTop_toBottomOf="@+id/ArtistName"></ImageView>

            <TextView
                android:id="@+id/txvListeners"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:hint="0"
                app:layout_constraintBottom_toBottomOf="@+id/ImgListener"
                app:layout_constraintEnd_toEndOf="@+id/ArtistName"
                app:layout_constraintStart_toEndOf="@+id/ImgListener"
                app:layout_constraintTop_toTopOf="@+id/ImgListener" />



        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>



</LinearLayout>